<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Sikdorok" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.Sikdorok" parent="Base.Theme.Sikdorok" />

    <style name="SikdorokTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_correct</item>
        <item name="boxStrokeErrorColor">@color/input_error</item>
        <item name="errorEnabled">true</item>
    </style>
</resources>
